<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_middle</item>
    </style>

    <style name="Button.MainColor">
        <item name="android:background">@drawable/bg_main_btn_selector</item>
    </style>

    <style name="EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_middle</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_primary_weak</item>
        <item name="android:padding">@dimen/small</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/font_middle</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/mini</item>
        <item name="android:paddingBottom">@dimen/mini</item>
        <item name="android:paddingLeft">@dimen/middle</item>
        <item name="android:paddingRight">@dimen/middle</item>
        <item name="android:textSize">@dimen/font_middle</item>
    </style>
    <style name="TextViewButton.MainColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_main_btn_selector</item>
    </style>

    <style name="TextViewButton.StokeMainColor">
        <item name="android:textColor">@color/color_main_p_selector</item>
        <item name="android:background">@drawable/bg_stroke_main_color_btn</item>
    </style>
</resources>