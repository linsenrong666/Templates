<resources>

    <style name="main_new_address_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="common_show_edit_text">true</item>
        <item name="common_show_bottom_inner_divider">false</item>
        <item name="common_inner_margin_left">@dimen/small</item>
        <item name="common_inner_margin_right">@dimen/small</item>
        <item name="common_label_width">100dp</item>
    </style>

    <style name="main_sort_index_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_main_selector</item>
    </style>

    <style name="main_balance_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small</item>
    </style>

    <style name="main_order_item_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/middle</item>
        <item name="android:paddingRight">@dimen/middle</item>
        <item name="android:paddingTop">@dimen/mini</item>
        <item name="android:paddingBottom">@dimen/mini</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
