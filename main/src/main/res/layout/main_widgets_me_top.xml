<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#008800"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/me_top_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_middle">

        <ImageView
            android:id="@+id/me_top_profile_iv"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@mipmap/common_ic_launcher_round"/>

        <TextView
            android:id="@+id/me_top_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_large"
            android:layout_toRightOf="@id/me_top_profile_iv"
            android:text="@string/common_app_name"
            android:textSize="@dimen/common_font_large"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/me_top_1"
        android:orientation="horizontal"
        android:padding="@dimen/common_middle">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖金\n200元"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖金\n200元"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖金\n200元"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖金\n200元"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖金\n200元"/>
    </LinearLayout>
</RelativeLayout>