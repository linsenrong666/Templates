<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/small"
    android:paddingTop="@dimen/small">

    <CheckBox
        android:id="@+id/item_address_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:button="@drawable/ic_check_box_selector"
        android:paddingBottom="@dimen/small"
        android:paddingLeft="@dimen/small"
        android:paddingTop="@dimen/small"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_address_name_tv"
                style="@style/TextView"
                tools:text="张三"/>

            <TextView
                android:id="@+id/item_address_phone_tv"
                style="@style/TextView"
                android:layout_alignParentRight="true"
                tools:text="13344445555"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_address_content_tv"
            style="@style/TextView"
            android:layout_marginTop="@dimen/tiny"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_small"
            tools:text="北京市东城区景山前街4号北京市东城区景山前街4号北京市东城区景山前街4号"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_address_edit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small"
        android:src="@mipmap/ic_edit"/>

</LinearLayout>