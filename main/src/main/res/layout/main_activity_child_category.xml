<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_horizontal"
    android:orientation="vertical"
    android:showDividers="middle">

    <com.linsr.main.widgets.MainSearchTitleLayout
        android:id="@+id/child_category_search_layout"
        android:layout_width="match_parent"
        app:mainSearchRightImage="@mipmap/ic_bot_cart_n"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/child_category_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_mall_tab_layout_height"
        android:background="@color/white"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="60dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextColor="@color/text_primary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/child_category_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>