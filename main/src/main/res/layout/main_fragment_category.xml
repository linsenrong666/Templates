<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/category_title_layout"
        layout="@layout/main_layout_search"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_recycler_view"
        android:layout_width="88dp"
        android:layout_height="match_parent"
        android:layout_below="@id/category_title_layout"
        android:background="@color/background"/>

    <FrameLayout
        android:id="@+id/category_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/category_title_layout"
        android:layout_toEndOf="@id/category_recycler_view"
        android:layout_toRightOf="@id/category_recycler_view"/>

</RelativeLayout>