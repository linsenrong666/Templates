<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white">

    <com.linsr.common.gui.widgets.SwipeMenu
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.linsr.common.gui.widgets.CircleImageView
                android:id="@+id/item_follow_profile_civ"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/item_follow_name_tv"
                style="@style/TextView"
                android:text="@string/app_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_follow_cancel_tv"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="@string/main_cancel_follow"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"/>

    </com.linsr.common.gui.widgets.SwipeMenu>
</FrameLayout>