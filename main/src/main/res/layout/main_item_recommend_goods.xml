<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/mini">

    <ImageView
        android:id="@+id/recommend_goods_img_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/placeholders_goods"/>

    <TextView
        android:id="@+id/recommend_goods_name_tv"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mini"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/recommend_goods_price_tv"
        style="@style/TextView.MainColor"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mini"
        android:text="@string/app_name"
        android:textSize="@dimen/font_small"
        android:textStyle="bold"/>

</LinearLayout>